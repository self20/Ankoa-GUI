#:kivy 1.8.0

# ---------- ERROR POPUP ----------
<ErrorPopup>:
    size_hint: .3, .3
    title: 'Warning'
    GridLayout:
        rows: 3

        # --- Logo ---
        BoxLayout:
            size_hint: 1, .4
            canvas:
                Color:
                    rgba: 0, 0, 0, .5
                Rectangle:
                    size: self.size
                    pos: self.pos
            Image:
                mipmap: True
                source: 'data/img/logo_title.png'

        # --- Error ---
        RstDocument:
            text:
                ('.. _top:\n'
                '\n'
                'Error\n'
                '============\n'
                '\n{}\n'.format(app.current_error))
