#:kivy 1.8.0

# ---------- EXIT POPUP ----------
<ExitPopup>:
    size_hint: .3, .2
    auto_dismiss: False
    title: 'Exit'

    GridLayout:
        cols: 1

        # --- Logo ---
        BoxLayout:
            size_hint: 1, .6
            canvas:
                Color:
                    rgba: 0, 0, 0, .5
                Rectangle:
                    size: self.size
                    pos: self.pos
            Image:
                mipmap: True
                source: 'data/img/logo_title.png'

        BoxLayout:
            size_hint: 1, .4

            # --- Confirm ---
            Button:
                text: 'Confirm'
                on_press: exit()

            # --- Restart ---
            Button:
                text: 'Restart'
                on_press: app.restart_ankoa()

            # --- Cancel ---
            Button:
                text: 'Cancel'
                on_press: root.dismiss()
