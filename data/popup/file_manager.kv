#:kivy 1.8.0
#:import user app.settings.conf_dict.user

# ---------- FILEMANAGER ----------
<File_managerPopup>:
    size_hint: .8, .8
    auto_dismiss: True
    title: 'File Manager'

    BoxLayout:
        TabbedPanel:
            tab_pos: "top_right"
            default_tab_text: "List View"
            default_tab_content: list_view_tab

            TabbedPanelHeader:
                text: 'Icon View'
                content: icon_view_tab

            # --- LIST VIEW ---
            FileChooserListView:
                id: list_view_tab
                filters:
                    user['sub_filter'] if\
                    user['request'] == 'sub_source' else\
                    user['encode_filter'] if\
                    user['request'] == 'encode_source' else\
                    user['remux_filter'] if\
                    user['request'] == 'remux_source' else\
                    user['extract_filter'] if\
                    user['request'] == 'extract_source' else ''
                rootpath: user['source_folder']
                value:
                    self.selection and\
                    self.selection[0] or ''
                on_selection:
                    app.load_sub_source(self.value) if\
                    user['request'] == 'sub_source' else\
                    app.scan_source_infos(
                    self.selection and self.selection[0]);\
                    app.load_video_source(
                    self.selection and self.selection[0]) if\
                    user['request'] == 'encode_source' or\
                    user['request'] == 'remux_source' or\
                    user['request'] == 'extract_source' else ''

            # --- ICON VIEW ---
            FileChooserIconView:
                id: icon_view_tab
                filters:
                    user['sub_filter'] if\
                    user['request'] == 'sub_source' else\
                    user['encode_filter'] if\
                    user['request'] == 'encode_source' else\
                    user['remux_filter'] if\
                    user['request'] == 'remux_source' else\
                    user['extract_filter'] if\
                    user['request'] == 'extract_source' else ''
                rootpath: user['source_folder']
                value:
                    self.selection and\
                    self.selection[0] or ''
                on_selection:
                    app.load_sub_source(self.value) if\
                    user['request'] == 'sub_source' else\
                    app.scan_source_infos(
                    self.selection and self.selection[0]);\
                    app.load_video_source(
                    self.selection and self.selection[0]) if\
                    user['request'] == 'encode_source' or\
                    user['request'] == 'remux_source' or\
                    user['request'] == 'extract_source' else ''
