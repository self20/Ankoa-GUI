#:kivy 1.8.0
#:import os os
#:import user app.settings.conf_dict.user
#:import filter app.settings.conf_dict.filter

# ---------- SETTINGS POPUP ----------
<SettingsPopup>:
    size_hint: .7, .5
    auto_dismiss: False
    title: 'User settings'
    GridLayout:
        cols: 1
        spacing: 5
        row_force_default: True
        row_default_height: 50

        # ---------- SOURCE FOLDER ----------
        BoxLayout:
            padding: 8
            canvas:
                Color:
                    rgba: 47 / 255., 167 / 255., 212 / 255., .1
                Rectangle:
                    size: self.size
                    pos: self.pos

            # --- Check source ---
            Switch:
                id: S_folder
                size_hint_x: .20
                touch_control: False
                active:
                    True if root.ids.source_folder.text and\
                    os.path.exists(root.ids.source_folder.text) else\
                    False
            Label:
                size_hint_x: .05

            # --- Source Label ---
            Label:
                text: 'Source'
                size_hint_x: .25

            # --- Select Source ---
            ActionButton:
                size_hint_x: .10
                icon: 'data/icon/add.png'
                on_press:
                    filter['request'] = 'folder';\
                    filter['folder_type'] = 'source_folder';\
                    app.main_popup('ManagerPopup()')

            # --- Source Input ---
            TextInput:
                hint_text: 'ex: /home/user/SOURCES/'
                text: user['source_folder'] or app.source_folder
                id: source_folder
                padding: 8, 8, 8, 0
                multiline: False

        # ---------- DESTINATION FOLDER ----------
        BoxLayout:
            padding: 8
            canvas:
                Color:
                    rgba: 47 / 255., 167 / 255., 212 / 255., .2
                Rectangle:
                    size: self.size
                    pos: self.pos

            # --- Check Destination ---
            Switch:
                id: D_folder
                size_hint_x: .20
                touch_control: False
                active:
                    True if root.ids.dest_folder.text and\
                    os.path.exists(root.ids.dest_folder.text) else\
                    False
            Label:
                size_hint_x: .05

            # --- Destination Label ---
            Label:
                text: 'Destination'
                size_hint_x: .25

            # --- Select Source ---
            ActionButton:
                size_hint_x: .10
                icon: 'data/icon/add.png'
                on_press:
                    filter['request'] = 'folder';\
                    filter['folder_type'] = 'dest_folder';\
                    app.main_popup('ManagerPopup()')

            # --- Destination Input ---
            TextInput:
                hint_text: 'ex: /home/user/ENCODES/'
                text: user['dest_folder'] or app.dest_folder
                id: dest_folder
                padding: 8, 8, 8, 0
                multiline: False

        # ---------- TEAM NAME ----------
        BoxLayout:
            padding: 8
            canvas:
                Color:
                    rgba: 47 / 255., 167 / 255., 212 / 255., .1
                Rectangle:
                    size: self.size
                    pos: self.pos

            # --- Check Team Name ---
            Switch:
                id: team
                size_hint_x: .20
                touch_control: False
                active:
                    True if root.ids.team_name.text else False
            Label:
                size_hint_x: .05

            # --- Team Name Value ---
            Label:
                text: 'Team'
                size_hint_x: .25

            # --- Clear Team ---
            ActionButton:
                icon: 'data/icon/refresh.png'
                size_hint_x: .10
                on_press: root.ids.team_name.text = ''

            # --- Team Name Input ---
            TextInput:
                hint_text: 'ex: KULTURA'
                text: user['team_name']
                id: team_name
                padding: 8, 8, 8, 0
                multiline: False

        # ---------- TMDB API KEY ----------
        BoxLayout:
            padding: 8
            canvas:
                Color:
                    rgba: 47 / 255., 167 / 255., 212 / 255., .2
                Rectangle:
                    size: self.size
                    pos: self.pos

            # --- Check TMDB ---
            Switch:
                id: tmdb
                size_hint_x: .20
                touch_control: False
                active:
                    True if root.ids.tmdb_apikey.text else False
            Label:
                size_hint_x: .05

            # --- TMDB Label ---
            Label:
                text: 'Api Key'
                size_hint_x: .25

            # --- Clear TMDB ---
            ActionButton:
                icon: 'data/icon/refresh.png'
                size_hint_x: .10
                on_press: root.ids.tmdb_apikey.text = ''

            # --- TMDB Label ---
            TextInput:
                hint_text:
                    'API : \
                    https://www.themoviedb.org/account/signup'
                text: user['tmdb_apikey']
                id: tmdb_apikey
                padding: 8, 8, 8, 0
                multiline: False

        # ---------- TRACKER ANNOUNCE ----------
        BoxLayout:
            padding: 8
            canvas:
                Color:
                    rgba: 47 / 255., 167 / 255., 212 / 255., .1
                Rectangle:
                    size: self.size
                    pos: self.pos

            # --- Check Announce ---
            Switch:
                id: tracker
                size_hint_x: .20
                touch_control: False
                active:
                    True if root.ids.tk_announce.text else False
            Label:
                size_hint_x: .05

            # --- Announce Label ---
            Label:
                text: 'Announce'
                size_hint_x: .25

            # --- Clear Announce ---
            ActionButton:
                icon: 'data/icon/refresh.png'
                size_hint_x: .10
                on_press: root.ids.tk_announce.text = ''

            # --- Announce Input ---
            TextInput:
                hint_text:
                    'ex: https://www.tracker.com:34000/announce'
                text: user['tk_announce']
                id: tk_announce
                padding: 8, 8, 8, 0
                multiline: False

        # ---------- CONTROL SETTINGS ----------
        BoxLayout:
            padding: 8

            # --- SAVE ---
            Button:
                id: _valid
                text: 'Save settings'
                on_press:
                    app.save_settings(root) if\
                    root.ids.S_folder.active is True and\
                    root.ids.D_folder.active is True else\
                    app.main_popup('ErrorPopup()')

            # --- RESET ---
            Button:
                text: 'Reset settings'
                on_press:
                    app.reset_settings(root )if\
                    root.ids.S_folder.active is True and\
                    root.ids.D_folder.active is True else\
                    app.main_popup('ErrorPopup()')
            Label:

            # --- EXIT ---
            Button:
                text: 'Close'
                on_press: root.dismiss()
