#:kivy 1.8.0

# ---------- ENCODE SCREEN ----------
AnkoaScreen:
	name: 'Encode'
	fullscreen: True

	# ---------- MENU ----------
	TabbedPanel:
	    do_default_tab: False

		# ---------- SOURCE ----------
		TabbedPanelItem:
		    text: 'Source'
		    FloatLayout:
		        Layout_source_enc:
		            id: source_enc

		# ---------- PREVIEW ----------
		TabbedPanelItem:
			text: 'Preview'
			FloatLayout:
				Layout_preview_enc:
					id: preview_enc

		# ---------- PICTURE ----------
		TabbedPanelItem:
			text: 'Picture'
			FloatLayout:
				Layout_picture_enc:
					id: picture_enc

		# ---------- VIDEO ----------
		TabbedPanelItem:
			text: 'Video'
			FloatLayout:
				Layout_video_enc:
					id: video_enc

		# ---------- AUDIO ----------
		TabbedPanelItem:
			text: 'Audio'
			FloatLayout:
				Layout_audio_enc:
					id: audio_enc

		# ---------- SUBTITLES ----------
		TabbedPanelItem:
			text: 'Subtitles'
			FloatLayout:
				Layout_subtitles_enc:
					id: subtitles_enc

		# ---------- ADVANCED ----------
		TabbedPanelItem:
			text: 'Advanced'
			FloatLayout:
				Layout_advanced_enc:
					id: advanced_enc

		# ---------- QUEUE ----------
		TabbedPanelItem:
			text: 'Queue'
			FloatLayout:
				Layout_queue_enc:
					id: queue_enc

# ---------- ENCODE LAYOUTS ----------
<Layout_source_enc@GridLayout+source_enc>
<Layout_preview_enc@GridLayout+preview_enc>
<Layout_picture_enc@GridLayout+picture_enc>
<Layout_video_enc@GridLayout+video_enc>
<Layout_audio_enc@GridLayout+audio_enc>
<Layout_subtitles_enc@GridLayout+subtitles_enc>
<Layout_advanced_enc@GridLayout+advanced_enc>
<Layout_queue_enc@GridLayout+queue_enc>
