#:kivy 1.8.0

# ---------- ENCODE SCREEN ----------
AnkoaScreen:
	name: 'Encode'
	fullscreen: True

	# ---------- MENU ----------
	TabbedPanel:
	    do_default_tab: False

		# ---------- SOURCE ----------
		TabbedPanelItem:
		    text: 'Source'
		    FloatLayout:
		        Layout_source:
		            id: source

		# ---------- PREVIEW ----------
		TabbedPanelItem:
			text: 'Preview'
			FloatLayout:
				Layout_preview:
					id: preview

		# ---------- PICTURE ----------
		TabbedPanelItem:
			text: 'Picture'
			FloatLayout:
				Layout_picture:
					id: picture

		# ---------- VIDEO ----------
		TabbedPanelItem:
			text: 'Video'
			FloatLayout:
				Layout_videox:
					id: videox

		# ---------- AUDIO ----------
		TabbedPanelItem:
			text: 'Audio'
			FloatLayout:
				Layout_audiox:
					id: audiox

		# ---------- SUBTITLES ----------
		TabbedPanelItem:
			text: 'Subtitles'
			FloatLayout:
				Layout_subtitles:
					id: subtitles

		# ---------- ADVANCED ----------
		TabbedPanelItem:
			text: 'Advanced'
			FloatLayout:
				Layout_advanced:
					id: advanced

		# ---------- RUN ----------
		TabbedPanelItem:
			text: 'Queue'
			FloatLayout:
				Layout_queue:
					id: queue

# ---------- LAYOUTS SCREENS ----------
<Layout_source@GridLayout+source>
<Layout_preview@GridLayout+preview>
<Layout_picture@GridLayout+picture>
<Layout_filters@GridLayout+filters>
<Layout_videox@GridLayout+videox>
<Layout_audiox@GridLayout+audiox>
<Layout_subtitles@GridLayout+subtitles>
<Layout_advanced@GridLayout+advanced>
<Layout_queue@GridLayout+queue>
