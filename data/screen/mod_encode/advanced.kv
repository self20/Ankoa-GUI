        Switch:
            size_hint_x: .12
        Label:
            size_hint_x: .150
            text: 'Deblocking'
            bold: True
        BoxLayout:
            Label:
                text: 'Alpha'
            Slider:
                id: alpha
                min: 0
                max: 12
                step: 1
                value: 6
            Label:
                text:
                    deblocking[int('{}'.format(alpha.value)
                    .split('.')[0])]
                bold: True
            Label:
                text: 'Beta'
            Slider:
                id: beta
                min: 0
                max: 12
                step: 1
                value: 6
            Label:
