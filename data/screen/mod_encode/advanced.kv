#:kivy 1.8.0
#:import pyramidal_method app.mod_encode.encode_var.pyramidal_method
#:import direct_mode app.mod_encode.encode_var.direct_mode
#:import adaptive_bframes app.mod_encode.encode_var.adaptive_bframes
#:import weighted_bframes app.mod_encode.encode_var.weighted_bframes
#:import motion_method app.mod_encode.encode_var.motion_method
#:import partitions_type app.mod_encode.encode_var.partitions_type
#:import trellis_val app.mod_encode.encode_var.trellis_val
#:import quantization app.mod_encode.encode_var.quantization
#:import rate_distortion app.mod_encode.encode_var.rate_distortion
#:import psy_trellis app.mod_encode.encode_var.psy_trellis
#:import deblocking app.mod_encode.encode_var.deblocking

# ---------- ADVANCED SCREEN ----------
<advanced@Widget>:
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: .96, .96
    spacing: 5
    cols: 1

    # ---------- THREADS ----------
    BoxLayout:
        padding: '8sp'
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: 47 / 255., 167 / 255., 212 / 255., .1
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Threads ---
        Switch:
            size_hint_x: .12

        # --- Threads Label ---
        Label:
            size_hint_x: .150
            text: 'Threads'
            bold: True

        BoxLayout:

            # --- Threads Number ---
            Label:
                text: 'Threads Number'
            Slider:
                id: threads_nb
                min: 0
                max: 32
                step: 1
                value: 0
            Label:
                text: str(root.ids.threads_nb.value).split('.')[0]
                bold: True

            # --- Slice Threads ---
            ToggleButton:
                id: threads_mod
                value: ''
                text: 'SLICE'
                group: 'threads'
                on_release: root.ids.threads_mod.value = 'slice'

            # --- Frame Threads ---
            ToggleButton:
                text: 'FRAME'
                group: 'threads'
                on_release: root.ids.threads_mod.value = 'frame'

    # ---------- FRAMES ----------
    BoxLayout:
        padding: '8sp'
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: 47 / 255., 167 / 255., 212 / 255., .2
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Frames ---
        Switch:
            size_hint_x: .12

        # --- Frames Label ---
        Label:
            size_hint_x: .150
            text: 'Frames'
            bold: True

        BoxLayout:

            # --- REF Frames ---
            Label:
                text: 'Ref-frames'
            Slider:
                id: ref_frames
                min: 0
                max: 16
                step: 1
                value: 0
            Label:
                text: str(root.ids.ref_frames.value).split('.')[0]
                bold: True

            # --- Max BFrames ---
            Label:
                text: 'Max B-Frames  '
            Slider:
                id: max_Bframes
                min: 0
                max: 16
                step: 1
                value: 0
            Label:
                text: str(root.ids.max_Bframes.value).split('.')[0]
                bold: True

            # --- Mixed Frames ---
            ToggleButton:
                id: mixed_ref
                value: ''
                text: 'MIXED'
                on_release: self.value = 'mixed'

    # ---------- ENCODING ----------
    BoxLayout:
        padding: '8sp'
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: 47 / 255., 167 / 255., 212 / 255., .1
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Encoding ---
        Switch:
            size_hint_x: .12

        # --- Encoding Label ---
        Label:
            size_hint_x: .150
            text: 'Encoding'
            bold: True

        BoxLayout:

            # --- Pyramidal Method ---
            Label:
                text: 'Pyramidal Method'
            Slider:
                id: pyramid_mod
                min: 0
                max: 2
                step: 1
                value: 0
            Label:
                text:
                    pyramidal_method[int('{}'.format(pyramid_mod.value)
                    .split('.')[0])]
                bold: True

            # --- 8x8 Transform ---
            ToggleButton:
                id: transform
                value: ''
                text: '8x8 TRANSFORM'
                on_release: self.value = 'transform'

            # --- Enable Cabac ---
            ToggleButton:
                id: cabac
                value: ''
                text: 'CABAC'
                on_release: self.value = 'cabac'

    # ---------- ADAPTIVE ----------
    BoxLayout:
        padding: '8sp'
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: 47 / 255., 167 / 255., 212 / 255., .2
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Adaptive ---
        Switch:
            size_hint_x: .12

        # --- Adaptive Label ---
        Label:
            size_hint_x: .150
            text: 'Adaptive'
            bold: True

        BoxLayout:

            # --- Direct Mode ---
            Label:
                text: 'Direct Mode  '
            Slider:
                id: direct_mod
                min: 0
                max: 3
                step: 1
                value: 0
            Label:
                text:
                    direct_mode[int('{}'.format(direct_mod.value)
                    .split('.')[0])]
                bold: True

            # --- Adaptive BFrames ---
            Label:
                text: 'B-Frames'
            Slider:
                id: B_frames
                min: 0
                max: 2
                step: 1
                value: 0
            Label:
                text:
                    adaptive_bframes[int('{}'.format(B_frames.value)
                    .split('.')[0])]
                bold: True

    # ---------- WEIGHTED ----------
    BoxLayout:
        padding: '8sp'
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: 47 / 255., 167 / 255., 212 / 255., .1
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Weighted ---
        Switch:
            size_hint_x: .12

        # --- Weighted Label ---
        Label:
            size_hint_x: .150
            text: 'Weighted'
            bold: True

        BoxLayout:

            # --- Weighted BFrames ---
            Label:
                text: 'Weighted B-Frames'
            Slider:
                id: weighted_bf
                min: 0
                max: 2
                step: 1
                value: 0
            Label:
                text:
                    weighted_bframes[int('{}'.format(weighted_bf.value)
                    .split('.')[0])]
                bold: True

            # --- Weighted PFrames ---
            ToggleButton:
                id: weighted_pf
                value: ''
                text: 'Weighted P-Frames'
                on_release: self.value = 'weighted_pf'

    # ---------- MOTION ----------
    BoxLayout:
        padding: '8sp'
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: 47 / 255., 167 / 255., 212 / 255., .2
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Motion ---
        Switch:
            size_hint_x: .12

        # --- Motion Label ---
        Label:
            size_hint_x: .150
            text: 'Motion'
            bold: True

        BoxLayout:

            # --- Motion Method ---
            Label:
                text: 'Method'
            Slider:
                id: me_method
                min: 0
                max: 3
                step: 1
                value: 1
            Label:
                text:
                    motion_method[int('{}'.format(me_method.value)
                    .split('.')[0])]
                bold: True

            # --- Subpixel ---
            Label:
                text: 'Subpixel'
            Slider:
                id: subpixel
                min: 0
                max: 11
                step: 1
                value: 7
            Label:
                text: str(subpixel.value).split('.')[0]
                bold: True

            # --- ME Range ---
            Label:
                text: 'ME-Range'
            Slider:
                id: me_range
                min: 4
                max: 64
                step: 1
                value: 16
            Label:
                text: str(me_range.value).split('.')[0]
                bold: True

    # ---------- PARTITIONS ----------
    BoxLayout:
        padding: '8sp'
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: 47 / 255., 167 / 255., 212 / 255., .1
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Partitions ---
        Switch:
            size_hint_x: .12

        # --- Partitions Label ---
        Label:
            size_hint_x: .150
            text: 'Partitions'
            bold: True

        BoxLayout:

            # --- Partitions Type ---
            Label:
                text: 'Type'
            Slider:
                id: partitions
                min: 0
                max: 6
                step: 1
                value: 1
            Label:
                text:
                    partitions_type[int('{}'.format(partitions.value)
                    .split('.')[0])]
                bold: True

            # --- Trellis ---
            Label:
                text: 'Trellis'
            Slider:
                id: trellis
                min: 0
                max: 2
                step: 1
                value: 1
            Label:
                text:
                    trellis_val[int('{}'.format(trellis.value)
                    .split('.')[0])]
                bold: True

    # ---------- QUANTIZATION ----------
    BoxLayout:
        padding: '8sp'
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: 47 / 255., 167 / 255., 212 / 255., .2
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Quantization ---
        Switch:
            size_hint_x: .12

        # --- Quantization Label ---
        Label:
            size_hint_x: .150
            text: 'Quantization'
            bold: True

        BoxLayout:

            # --- Adaptive Strenght ---
            Label:
                text: 'Adaptive Strenght'
            Slider:
                id: adapt_strenght
                min: 0
                max: 20
                step: 1
                value: 10
            Label:
                text:
                    quantization[int('{}'.format(adapt_strenght.value)
                    .split('.')[0])]
                bold: True

            # --- Psychovisual Optimization ---
            ToggleButton:
                id: psy_optim
                value: ''
                text: 'PSY OPTIMIZATION'
                on_release: self.value = 'psy_optim'

    # ---------- DISTORTION ----------
    BoxLayout:
        padding: '8sp'
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: 47 / 255., 167 / 255., 212 / 255., .1
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Distortion ---
        Switch:
            size_hint_x: .12

        # --- Distortion Label ---
        Label:
            size_hint_x: .150
            text: 'Distortion'
            bold: True

        BoxLayout:

            # --- Rate Distortion ---
            Label:
                text: 'Rate'
            Slider:
                id: distord_rate
                min: 0
                max: 20
                step: 1
                value: 10
            Label:
                text:
                    rate_distortion[int('{}'.format(distord_rate.value)
                    .split('.')[0])]
                bold: True

            # --- Psychovisual Trellis ---
            Label:
                text: 'Psychovisual Trellis   '
            Slider:
                id: psy_trelli
                min: 0
                max: 20
                step: 1
                value: 10
            Label:
                text:
                    psy_trellis[int('{}'.format(psy_trelli.value)
                    .split('.')[0])]
                bold: True

    # ---------- DEBLOCK ----------
    BoxLayout:
        padding: '8sp'
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: 47 / 255., 167 / 255., 212 / 255., .2
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Deblock ---
        Switch:
            size_hint_x: .12

        # --- Deblock Label ---
        Label:
            size_hint_x: .150
            text: 'Deblocking'
            bold: True

        BoxLayout:

            # --- Deblock Alpha ---
            Label:
                text: 'Alpha'
            Slider:
                id: deblock_alpha
                min: 0
                max: 12
                step: 1
                value: 6
            Label:
                text:
                    deblocking[int('{}'.format(deblock_alpha.value)
                    .split('.')[0])]
                bold: True

            # --- Deblock Beta ---
            Label:
                text: 'Beta'
            Slider:
                id: deblock_beta
                min: 0
                max: 12
                step: 1
                value: 6
            Label:
                text:
                    deblocking[int('{}'.format(deblock_beta.value)
                    .split('.')[0])]
                bold: True

    # ---------- KEYFRAME ----------
    BoxLayout:
        padding: '8sp'
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: 47 / 255., 167 / 255., 212 / 255., .1
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Keyframe ---
        Switch:
            size_hint_x: .12

        # --- Keyframe Label ---
        Label:
            size_hint_x: .150
            text: 'KeyFrame'
            bold: True

        BoxLayout:

            # --- Keyframe Interval ---
            Label:
                text: 'Interval'
            TextInput:
                id: key_interval
                value: self.text
                hint_text: '250'
                input_filter: 'int'

            # --- Minimal Key ---
            Label:
                text: 'Minimal Key'
            TextInput:
                id: min_key
                value: self.text
                hint_text: '25'
                input_filter: 'int'

            # --- RC Lookahead ---
            Label:
                text: 'Lookahead'
            TextInput:
                id: lookahead
                value: self.text
                hint_text: '60'
                input_filter: 'int'

    # ---------- VARIOUS ----------
    BoxLayout:
        padding: '8sp'
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: 47 / 255., 167 / 255., 212 / 255., .2
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Various ---
        Switch:
            size_hint_x: .12

        # --- Various Label ---
        Label:
            size_hint_x: .150
            text: 'Various'
            bold: True

        BoxLayout:

            # --- Scenecut ---
            Label:
                text: 'Scenecut'
            TextInput:
                id: scenecut
                value: self.text
                hint_text: '40'
                input_filter: 'int'

            # --- Chroma ---
            ToggleButton:
                id: chroma
                value: ''
                text: 'CHROMA'
                on_release: self.value = 'chroma'

            # --- Fast Skip ---
            ToggleButton:
                id: fast_skip
                text: 'FAST SKIP'
                on_release: self.value = 'fast_skip'

            # --- Grayscale ---
            ToggleButton:
                id: grayscale
                value: ''
                text: 'GRAYSCALE'
                on_release: self.value = 'grayscale'

            # --- BluRay Compatibility ---
            ToggleButton:
                id: bluray_compat
                value: ''
                text: 'BLURAY'
                on_release: self.value = 'bluray_compat'
