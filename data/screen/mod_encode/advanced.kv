            Slider:
                id: motion_mod
                min: 0
                max: 3
                step: 1
                value: 1
            Label:
                text:
                    motion_method[int('{}'.format(motion_mod.value)
                    .split('.')[0])]
                bold: True
            Label:
                text: 'Subpixel'
            Slider:
                id: subpixel
                min: 0
                max: 11
                step: 1
                value: 7
            Label:
                text: str(subpixel.value).split('.')[0]
                bold: True
            Label:
                text: 'ME-Range'
            Slider:
                id: me_range
                min: 4
                max: 64
                step: 1
                value: 16
            Label:
                text: str(me_range.value).split('.')[0]
