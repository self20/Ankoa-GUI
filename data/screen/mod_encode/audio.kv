#:kivy 1.8.0

<audio@Widget>:
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: .96, .96
    cols: 1

    # ---------- SOURCE INFOS ----------
    BoxLayout:
        size_hint: 1, .4
        TextInput:
            readonly: True
            padding_x: '20sp'
            cursor_color: 0, 0, 0, .5
            background_color: 0, 0, 0, .5
            foreground_color: 0, 255, 0, 1
            hint_text: 'Source Infos Area'
            hint_text_color: 0, 255, 0, 1
            text:
                '' if app.scan_data is None else\
                (app.scan_data).strip()

    # ---------- AUDIO TRACK MENU ----------
    BoxLayout:
        padding: '8sp'
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: .2, .3, .4, .5
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            request: 'add_track'
            text: 'Add Audio Track'
            on_press: app.audioTrack(self.request)
        Button:
            request: 'clear_tracks'
            text: 'CLear All Tracks'
            on_press: app.audioTrack(self.request)

    # ---------- AUDIO TRACK LAYOUT ----------
    GridLayout:
        cols: 1
        spacing: 5
        row_force_default: True
        row_default_height: 76
        id: audio_track_layout
