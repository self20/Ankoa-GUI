#:kivy 1.8.0

# ---------- AUDIO LAYOUT ----------
<audio_enc@Widget>:
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: .97, .96
    spacing: 5
    cols: 1

    # ---------- SOURCE INFOS ----------
    BoxLayout:
        size_hint: 1, .4
        TextInput:
            readonly: True
            padding: 20, 15, 0, 0
            cursor_color: 0, 0, 0, .5
            background_color: 0, 0, 0, .5
            foreground_color: 0, 255, 0, 1
            hint_text: 'Source Infos Area'
            hint_text_color: 0, 255, 0, 1
            text:
                '' if app.scan_encode is None else\
                (app.scan_encode).strip()

    # ---------- AUDIO TRACK MENU ----------
    BoxLayout:
        padding: 8
        orientation: 'horizontal'
        size_hint: 1, .1
        canvas:
            Color:
                rgba: 2, 2, 2, .5
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Add audio Track button ---
        Button:
            text: 'Add Audio Track'
            on_press: app.add_audioTrack_enc()

        # --- Clear audio Tracks button ---
        Button:
            text: 'Clear All Tracks'
            on_press: app.clear_audioTracks_enc()

    # ---------- AUDIO TRACK LAYOUT ----------
    GridLayout:
        cols: 1
        spacing: 5
        row_force_default: True
        row_default_height: 76
        id: audio_track_layout
