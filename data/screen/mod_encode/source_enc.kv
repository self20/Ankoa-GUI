#:kivy 1.8.0
#:import filter app.settings.conf_dict.filter

# ---------- SOURCE LAYOUT ----------
<source_enc@Widget>:
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: .97, .96
    spacing: 5
    cols: 1

    # ---------- SOURCE INFOS ----------
    BoxLayout:
        size_hint: 1, .95
        TextInput:
            readonly: True
            padding: 20, 15, 0, 0
            cursor_color: 0, 0, 0, .5
            background_color: 0, 0, 0, .5
            foreground_color: 0, 255, 0, 1
            hint_text: 'Source Infos Area'
            hint_text_color: 0, 255, 0, 1
            text:
                '' if app.scan_encode is None else\
                (app.scan_encode).strip()

    # ---------- RELEASE SOURCE ----------
    BoxLayout:
        padding: 8
        spacing: 5
        size_hint: 1, .1
        canvas:
            Color:
                rgba: .1, .1, .1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Source ---
        Switch:
            id: r_source
            size_hint_x: .1
            touch_control: False
            active:
                True if root.ids.source.text else False

        # --- Source Label ---
        Label:
            text: 'Video Source'
            size_hint_x: .2
            bold: True

        # --- Select Source ---
        ActionButton:
            size_hint_x: .05
            icon: 'data/icon/add.png'
            on_press:
                filter['request'] = 'encode_source';\
                app.main_popup('ManagerPopup()')

        # --- Source Location ---
        TextInput:
            id: source
            size_hint_x: .7
            multiline: False
            readonly: True
            padding: 8, 8, 0, 0
            text: app.encode_source

    # ---------- RELEASE TITLE ----------
    BoxLayout:
        padding: 8
        spacing: 5
        size_hint: 1, .1
        canvas:
            Color:
                rgba: .1, .1, .1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        # --- Check Title ---
        Switch:
            id: r_title
            size_hint_x: .1
            touch_control: False
            active:
                True if root.ids.title.text else False

        # --- Title Label ---
        Label:
            text: 'Release Title'
            size_hint_x: .2
            bold: True

        # --- Clear Title ---
        ActionButton:
            icon: 'data/icon/refresh.png'
            size_hint_x: .05
            on_press: root.ids.title.text = ''

        # --- Title Input ---
        TextInput:
            id: title
            size_hint_x: .7
            multiline: False
            padding: 8, 8, 0, 0
            text: (app.encode_source).split('/')[-1][:-4]
