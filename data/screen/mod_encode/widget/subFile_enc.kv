#:kivy 1.8.0
#:import uuid uuid
#:import user app.settings.conf_dict.user

# ---------- SUBTITLES FILE WIDGET ----------
GridLayout:
    id: subFile
    padding: '4sp'
    cols: 2
    rows: 1
    canvas:
        Color:
            rgba: 5, .4, .5, .5
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: sub_infos
        type: 'subfile'
        padding: '5sp'

        # --- Check Subtitles Track ---
        Switch:
            size_hint_x: .2
            touch_control: False
            active: True if sub_source.text != '' else False

        # --- DEL Track button ----
        ActionButton:
            icon: 'data/icon/del.png'
            size_hint_x: .1
            on_press: app.del_subTrack_enc(root)

        # --- Select Track Source ---
        ActionButton:
            icon: 'data/icon/add.png'
            size_hint_x: .1
            popup_id: 'ManagerPopup()'
            on_press:
                user['request'] = 'sub_source';\
                app.main_popup(self.popup_id);\
                app.get_current_track(root)

        # --- Subtitles Track Source ---
        TextInput:
            id: sub_source
            hint_text: 'Track Source'
            readonly: True
            multiline: False
            size_hint_x: .7
            padding: 8, 8, 0, 0

        # --- Subtitles Track Language ---
        TextInput:
            id: sub_track_lang
            hint_text: 'Language'
            multiline: False
            size_hint_x: .3
            padding: 8, 8, 0, 0
            readonly:
                True if sub_burned.state == 'down' else False

        # --- Subforced Track ---
        ToggleButton:
            id: sub_forced
            text: 'Forced'
            size_hint_x: .2
            group: 'subs'
            value: '1' if self.state == 'down' else '0'

        # --- Burned Track ---
        ToggleButton:
            id: sub_burned
            text: 'Burned'
            size_hint_x: .2
            group: 'subs'
            value: 'burned' if self.state == 'down' else ''

        # --- Subcharset ---
        TextInput:
            id: sub_charset
            hint_text: 'Charset'
            multiline: False
            size_hint_x: .2
            padding: 8, 8, 0, 0
            readonly:
                True if sub_burned.state == 'down' else False
