#:kivy 1.8.0

# ---------- SUBTITLES FILE WIDGET ----------
BoxLayout:
    padding: '4sp'
    canvas:
        Color:
            rgba: 128, 128, 1, .5
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        cols: 2
        rows: 1

        # ---------- SUBS TRACK SOURCE & TITLE ----------
        BoxLayout:
            padding: '3sp'
            size_hint: .6, 1

            # --- Check Subtitles Track ---
            Switch:
                size_hint_x: .2
                touch_control: False
                active: True if sub_track_title != '' else False

            # --- DEL Subtitles Track ---
            Button:
                text: 'DEL'
                size_hint_x: .1
                request: 'del_track'
                on_press: app.subtitlesTrack(self.request)

            BoxLayout:
                padding: '2sp'

                # --- Select Track Source ---
                Button:
                    text: 'SOURCE'
                    size_hint_x: .2

                # --- Subtitles Track Title ---
                TextInput:
                    id: sub_track_title
                    hint_text: 'Track Title'
                    multiline: False

        # ---------- SUB TRACK INFOS ----------
        BoxLayout:
            padding: '2sp'
            size_hint: .4, 1

            # --- Subforced Track ---
            ToggleButton:
                id: sub_forced
                text: 'Forced'

            # --- Burned Track ---
            ToggleButton:
                id: sub_burned
                text: 'Burn in'

            # --- Default Track ---
            ToggleButton:
                id: sub_default
                text: 'Default'

            # --- Subcharset ---
            TextInput:
                hint_text: 'Chars'
                multiline: False

            # --- Subdelay ---
            TextInput:
                hint_text: 'Delay'
                multiline: False
