#:kivy 1.8.0

# ---------- SUBTITLES TRACK WIDGET ----------
GridLayout:
    padding: '4sp'
    cols: 2
    rows: 1
    canvas:
        Color:
            rgba: 5, .4, .5, .5
        Rectangle:
            size: self.size
            pos: self.pos

    # ---------- SUBS TRACK ID & TITLE ----------
    BoxLayout:
        padding: '3sp'
        size_hint: .6, 1

        # --- Check Subtitles Track ---
        Switch:
            size_hint_x: .2
            touch_control: False
            active:
                True if sub_track_ID.text != '' and\
                sub_track_title.text != '' else False

        # --- DEL Subtitles Track ---
        Button:
            text: 'DEL'
            size_hint_x: .1
            on_press: app.del_subtitles_track(root)

        BoxLayout:
            padding: '2sp'

            # --- Subtitles Track ID ---
            TextInput:
                id: sub_track_ID
                hint_text: 'Track ID'
                multiline: False
                size_hint_x: .2
                input_filter: 'int'

            # --- Subtitles Track Title ---
            TextInput:
                id: sub_track_title
                hint_text: 'Track Title'
                multiline: False

    # ---------- SUB TRACK INFOS ----------
    BoxLayout:
        padding: '2sp'
        size_hint: .4, 1

        # --- Subforced Track ---
        ToggleButton:
            id: sub_forced
            text: 'Forced'
            value: ''
            on_release:
                self.value = 'subforced'

        # --- Burned Track ---
        ToggleButton:
            id: sub_burned
            text: 'Burn in'
            value: ''
            on_release:
                self.value = 'subburned'

        # --- Default Track ---
        ToggleButton:
            id: sub_default
            text: 'Default'
            value: ''
            on_release:
                self.value = 'subdefault'; app.get_subtitles_infos()

        # --- Subcharset ---
        TextInput:
            id: sub_charset
            hint_text: 'Chars'
            multiline: False

        # --- Subdelay ---
        TextInput:
            id: sub_delay
            hint_text: 'Delay'
            multiline: False
