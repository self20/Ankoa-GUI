#:kivy 1.8.0
#:import uuid uuid

# ---------- SUBTITLES TRACK WIDGET ----------
GridLayout:
    id: subTrack
    padding: '4sp'
    rows: 1
    canvas:
        Color:
            rgba: 5, .4, .5, .5
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: sub_infos
        padding: '5sp'
        group_codec: uuid.uuid4()
        group_forced: uuid.uuid4()

        # --- Check Subtitles Track ---
        Switch:
            size_hint_x: .2
            touch_control: False
            active:
                True if root.ids.sub_track_ID.text != '' and\
                root.ids.sub_codec.value != '' else False

        # --- DEL Subtitles Track ---
        Button:
            text: 'DEL'
            size_hint_x: .1
            on_press: app.del_subtitles_track(root)
        Label:
            size_hint_x: .05

        # --- Subtitles Track ID ---
        TextInput:
            id: sub_track_ID
            hint_text: 'Track ID'
            multiline: False
            size_hint_x: .2
            input_filter: 'int'
            padding: 8, 8, 0, 0

        # --- Subtitles Codec ---
        ToggleButton:
            id: sub_codec
            text: 'SRT'
            size_hint_x: .15
            group: root.ids.sub_infos.group_codec
            value:
                'srt' if self.state == 'down' else\
                'ass' if root.ids.ass.state == 'down' else\
                'pgs' if root.ids.pgs.state == 'down' else\
                'vobsub' if root.ids.vob.state == 'down' else ''

        ToggleButton:
            id: ass
            text: 'ASS'
            size_hint_x: .15
            group: root.ids.sub_infos.group_codec

        ToggleButton:
            id: pgs
            text: 'PGS'
            size_hint_x: .15
            group: root.ids.sub_infos.group_codec

        ToggleButton:
            id: vob
            text: 'VOB'
            size_hint_x: .15
            group: root.ids.sub_infos.group_codec

        # --- Subtitles Language ---
        TextInput:
            id: sub_track_lang
            hint_text: 'Language'
            multiline: False
            size_hint_x: .3

        # --- Subforced ---
        ToggleButton:
            id: sub_forced
            text: 'Forced'
            size_hint_x: .2
            group: root.ids.sub_infos.group_forced
            value: '1' if self.state == 'down' else '0'

        # --- SubBurned ---
        ToggleButton:
            id: sub_burned
            text: 'Burned'
            size_hint_x: .2
            group: root.ids.sub_infos.group_forced
            value: 'subburned' if self.state == 'down' else ''

        # --- Subcharset ---
        TextInput:
            id: sub_charset
            hint_text: 'Charset'
            multiline: False
            size_hint_x: .2
            readonly:
                True if root.ids.sub_burned.state == 'down' else False
