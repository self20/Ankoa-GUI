#:kivy 1.8.0

# ---------- TRACKS SCREEN ----------
<tracks_rmx@Widget>:
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: .97, .96
    spacing: 5
    cols: 1
    canvas:
        Color:
            rgba: .2, .3, .4, .5
        Rectangle:
            size: self.size
            pos: self.pos

    # ---------- SOURCE INFOS ----------
    BoxLayout:
        size_hint: 1, .4
        TextInput:
            readonly: True
            padding_x: '20sp'
            cursor_color: 0, 0, 0, .5
            background_color: 0, 0, 0, .5
            foreground_color: 0, 255, 0, 1
            hint_text: 'Source Infos Area'
            hint_text_color: 0, 255, 0, 1
            text:
                '' if app.scan_remux is None else\
                (app.scan_remux).strip()

    BoxLayout:
