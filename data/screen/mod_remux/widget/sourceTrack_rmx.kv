#:kivy 1.8.0

# ---------- SOURCE TRACK WIDGET ----------
GridLayout:
    padding: 4
    rows: 2
    canvas:
        Color:
            rgba: 5, .4, .5, .5
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        padding: 5

        # --- Check Track ---
        Switch:
            size_hint_x: .1
            touch_control: False

        # --- DEL Track ----
        ActionButton:
            icon: 'data/icon/del.png'
            size_hint_x: .05
            on_press: app.del_Track_rmx(root)

        # --- Track ID ---
        TextInput:
            hint_text: 'Track ID'
            multiline: False
            size_hint_x: .1
            input_filter: 'int'
            padding: 8, 8, 0, 0

        # --- Track Language ---
        TextInput:
            hint_text: 'Language'
            multiline: False
            size_hint_x: .2
            padding: 8, 8, 0, 0

        # --- Track Title ---
        TextInput:
            hint_text: 'Track Title'
            multiline: False
            size_hint_x: .4
            padding: 8, 8, 0, 0

        # --- Track Settings ---
        Button:
            text: 'SETTINGS'
            size_hint_x: .1
